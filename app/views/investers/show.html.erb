<ul class="nav nav-tabs">
  <li class="active"><a href="#tab1" data-toggle="tab">投資家情報</a></li>
  <li><a href="#tab2" data-toggle="tab">投資銘柄情報</a></li>
  <li><a href="#tab3" data-toggle="tab">バフェット関連書籍</a></li>
  
</ul>
<!-- / タブ-->
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade in active" id="tab1">
    <div class="contents row" >
      <div class="col-xs-12 col-md-6">
        <h2><%= @name %> </h2>
        <div class="thumbnail">
          <div class="form-group">
            <%= image_tag(@image , :size => "100x100") %>
            <h4>経歴</h4>
            <p> <%= @history %> </p>
          </div>
        </div>
      </div>



      <div class="col-xs-12 col-md-6">
       <h3>実績&投資スタイル</h3>
       <div class="form-group">
         <li><h4>リスク許容度：<%= @risk %></h4></li>
         <li><h4>投資期間：<%= @term %>年</h4> </li>
         <li><h4>投資商品：<%= @investment_type %>等</h4> </li>
       </div>
       <div class="form-group">
        <h5>主な投資先</h5>
        <%= geo_chart [["Russia", 100],["Japan",78],["Brazil",29]]%>
      </div>

      <%= link_to '[マイページへ]',"/users/#{current_user.id}",class: 'btn btn-block btn-big btn-red'%>

    </div>
  </div>
</div>
<div class="tab-pane fade" id="tab2">
 <table class="table table-bordered">
   <% @date.each do |stockinformation| %>
   <tr>
     <td><%= link_to "#{stockinformation.company}", stockinformation.link %></td> 
     <td><%= stockinformation.ticker%></td>
     <td><%= stockinformation.value%> USD</td> 
     <td><%= stockinformation.share%> USD</td> 
     <td><%= stockinformation.portfolio%>%</td>  
   </tr>
   <% end %>
 </table>
</div>
<div class="tab-pane fade" id="tab3">

  <!-- <div class="thumbnail"> -->
    <% @date2.each do |book| %>
   <a  href = <%= book.book_url%>>
    <%= image_tag(book.books ,:size => "150x150") %></a>
    <% end %>
  <!-- </div> -->

</div>